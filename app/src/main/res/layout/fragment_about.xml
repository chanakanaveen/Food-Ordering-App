<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.about.AboutFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- App Logo -->
        <ImageView
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:src="@drawable/inverted_logobg" />

        <!-- App Name -->
        <TextView
            android:id="@+id/appName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Food Ordering App"
            android:textSize="22sp"
            android:textColor="@color/purple"
            android:textStyle="bold" />

        <!-- App Version -->
        <TextView
            android:id="@+id/appVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Version 1.0"
            android:textSize="14sp" />

        <!-- App Description -->
        <TextView
            android:id="@+id/appDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="I am Chanaka Naveeen, a student at Wrexham Glyndwr University.This Food Ordering App was made for an assignment activity. "
            android:textSize="14sp" />

        <!-- Special Features -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Special Features"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/appFeatures"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Check Out Popular Items \nAdd to Cart \nMultiple Payment Options \nUpdate Your Profile"
            android:textSize="14sp" />

        <!-- Technologies Used -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Technologies Used:"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Java, Android SDK, Firebase"
            android:textSize="14sp" />

        <!-- Privacy Policy -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Privacy Policy:"
            android:textSize="16sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Your privacy is important to us. We do not collect any personal information through this app."
            android:textSize="14sp" />

        <!-- Legal Notices -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Legal Notices:"
            android:textSize="16sp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="This app uses open-source components licensed under the Apache License, Version 2.0."
            android:textSize="14sp" />
        <!-- Contact Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Contact Us"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/contactEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Email: chanakanaveen2016@gmail.com"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/contactPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Phone: +94 767785941"
            android:textSize="14sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Follow Us"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/facebook"
                android:contentDescription="Facebook"
                android:padding="4dp"
                android:onClick="onFacebookClick" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/twitter"
                android:contentDescription="Twitter"
                android:padding="4dp"
                android:onClick="onTwitterClick" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/instagram"
                android:contentDescription="Instagram"
                android:padding="4dp"
                android:onClick="onInstagramClick" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>